<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/statistic_background">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/categorybtn2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/ic_home_white_24dp" />
            <TextView
                android:id="@+id/statistics"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="통계"
                android:layout_margin="20dp"
                android:fontFamily="@font/pink"
                android:textColor="#ffffff"
                android:textSize="35dp" />


        </RelativeLayout>




        <RelativeLayout
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:layout_width="380dp"
            android:layout_height="700dp"
            android:background="@drawable/statistics_background2">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="600dp"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/rank1_progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            android:background="@drawable/statistics_progress"
                            android:indeterminate="false"
                            android:max="30"
                            android:progressDrawable="@drawable/statistics_progress_bar" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/rank_click1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pink"
                                android:text=" "
                                android:textColor="#000000"
                                android:textSize="25dp" />

                            <ImageView
                                android:id="@+id/rank_iv1"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/plus" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp">

                        <ProgressBar
                            android:id="@+id/rank2_progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            android:background="@drawable/statistics_progress"
                            android:indeterminate="false"
                            android:max="30"
                            android:progressDrawable="@drawable/statistics_progress_bar" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/rank_click2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pink"
                                android:text=" "
                                android:textColor="#000000"
                                android:textSize="25dp" />

                            <ImageView
                                android:id="@+id/rank_iv2"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/plus" />


                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rank_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/pink"
                        android:gravity="center"
                        android:hint="약이름"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/rank_name2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/pink"
                        android:gravity="center"
                        android:hint="약이름"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ProgressBar
                            android:id="@+id/rank3_progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            android:background="@drawable/statistics_progress"
                            android:indeterminate="false"
                            android:max="30"
                            android:progressDrawable="@drawable/statistics_progress_bar" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/rank_click3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pink"
                                android:text=" "
                                android:textColor="#000000"
                                android:textSize="25dp" />

                            <ImageView
                                android:id="@+id/rank_iv3"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/plus" />

                        </RelativeLayout>
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20sp">


                        <ProgressBar
                            android:id="@+id/rank4_progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_weight="1"
                            android:background="@drawable/statistics_progress"
                            android:indeterminate="false"
                            android:max="30"
                            android:progressDrawable="@drawable/statistics_progress_bar" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <TextView
                                android:id="@+id/rank_click4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/pink"
                                android:text=" "
                                android:textColor="#000000"
                                android:textSize="25dp" />

                            <ImageView
                                android:id="@+id/rank_iv4"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/plus" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/rank_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/pink"
                        android:gravity="center"
                        android:hint="약이름"
                        android:textColor="#000000"
                        android:textSize="25dp" />

                    <EditText
                        android:id="@+id/rank_name4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_weight="1"
                        android:background="@null"
                        android:fontFamily="@font/pink"
                        android:gravity="center"
                        android:hint="약이름"
                        android:textColor="#000000"
                        android:textSize="25dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:fontFamily="@font/pink"
                        android:text="※내복약은 정확하지 않을 수 있습니다."
                        android:textColor="#FF0000"
                        android:textSize="20dp" />
                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>





    </RelativeLayout>

</RelativeLayout>
