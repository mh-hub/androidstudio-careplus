<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10sp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"

            >

            <TextView
                android:id="@+id/name_medicin_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/pink"
                android:text="약이름"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kind_medicin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:fontFamily="@font/pink"
                    android:text="내복약"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:fontFamily="@font/pink"
                    android:text="|"
                    android:textColor="#000000"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/way_medicin_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:fontFamily="@font/pink"
                    android:text="월,화,수,목,금,토,일"
                    android:textColor="#000000"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginRight="10sp"
            >
            <TextView
                android:id="@+id/medicin_time_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오전 9:00"
                android:drawableStart="@drawable/ic_alarm_black_24dp"
                android:drawableLeft="@drawable/ic_alarm_black_24dp"
                android:textSize="14sp"
                android:fontFamily="@font/pink"
                android:textColor="#000000"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/medicin_time_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후 12:00"
                android:drawableStart="@drawable/ic_alarm_black_24dp"
                android:drawableLeft="@drawable/ic_alarm_black_24dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10sp"
                android:textSize="14sp"
                android:fontFamily="@font/pink"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/medicin_time_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오후 19:00"
                android:drawableStart="@drawable/ic_alarm_black_24dp"
                android:drawableLeft="@drawable/ic_alarm_black_24dp"
                android:textSize="14sp"
                android:fontFamily="@font/pink"
                android:textColor="#000000"
                android:layout_marginBottom="10sp"
                android:layout_gravity="center"
                />
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>